<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/posterImage"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:scaleType="matrix"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/posterImage"
        android:layout_toRightOf="@+id/posterImage"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="This is a title"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_toEndOf="@+id/posterImage"
        android:layout_toRightOf="@+id/posterImage"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="This is a title"
        android:textColor="@color/grayTextColor"
        android:textSize="18dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvGenre"
        android:layout_toEndOf="@+id/posterImage"
        android:layout_toRightOf="@+id/posterImage"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="This is a description of the series"
        android:textColor="@android:color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDesc"
        android:layout_alignBottom="@id/posterImage"
        android:layout_toEndOf="@+id/posterImage"
        android:gravity="bottom"
        android:layout_toRightOf="@+id/posterImage"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="Rating: 0"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:textSize="14dp" />

</RelativeLayout>